# Секретный ключ для JWT (обязательно измените!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS — укажите URL вашего фронтенда на Railway
# Пример: https://frontend-production-xxxx.up.railway.app
CORS_ORIGINS=https://your-frontend.up.railway.app

# База данных (SQLite — путь к файлу)
DATABASE_URL=sqlite:///./salon.db

# Директория для загрузок
UPLOAD_DIR=uploads

# Настройки приложения
DEBUG=false
LOG_LEVEL=INFO
