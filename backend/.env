# Режим работы
DEBUG=false
BASE_URL=https://api.yoursalon.com

# Безопасность
SECRET_KEY=your-production-secret-key-change-this-immediately
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - укажите ваш домен фронтенда
CORS_ORIGINS=https://admin.yoursalon.com,https://yoursalon.com

# База данных
DATABASE_URL=sqlite:///production.db

# Загрузка файлов
UPLOAD_DIR=/var/www/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Администратор

# Логирование
LOG_LEVEL=INFO
LOG_FILE=/var/log/salon/app.log

# Почта (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@yoursalon.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yoursalon.com

# Admin
ADMIN_EMAIL=admin@salon.com
ADMIN_PASSWORD=admin123